<% if false %>
<h1>Listing levels</h1>

<table>
  <tr>
    <th>Priorität</th>
    <th>Name</th>
  </tr>

<% for level in @levels %>
  <tr>
	  <td><%=h level.priority %></td>
    <td><%=h level.name %></td>
    <td><%= link_to 'Edit', edit_level_path(level) %></td>
    <td><%= link_to 'Destroy', level, :confirm => 'Sind sie sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New level', new_level_path %>
<% end %>
<h1>Subjekte</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Clearance</th>
    <th>Passwort</th>
  </tr>

<% for subject in @subjects %>
  <tr>
    <td><%=h subject.name %></td>
    <td><%=h subject.level.name %></td>
    <td><%=h subject.password %></td>
    <td><%= link_to 'Bearbeiten', edit_subject_path(subject) %></td>
    <td><%= link_to 'Löschen', subject, :confirm => 'Sind sie sicher?', :method => :delete %></td>
  </tr>
<% end %>
</table>
<br />
<%= link_to 'Neues Subjekt anlegen', new_subject_path %>

